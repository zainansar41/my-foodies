                                    <div class="content-box">
                                        <div class="content">
                                            <div class="heading">
                                                <%= result[random].dishName%>
                                            </div>
                                            <div class="autorName">
                                                Chef: <strong><%= result[random].name%></strong>
                                            </div>
                                            <a href="/showRecipe/<%= result[random]._id%>">View Recipe</a>
